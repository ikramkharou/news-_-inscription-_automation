# Newsletter Automation System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Search Engine API Keys (Optional - for enhanced discovery)
# Get these from Google Cloud Console and Microsoft Azure
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_custom_search_engine_id_here
BING_API_KEY=your_bing_search_api_key_here

# Email Configuration
# Change this to your actual email address
TEST_EMAIL=your@email.com

# Database Configuration (Optional)
DATABASE_PATH=newsletter_discovery.db

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting (Optional - adjust based on your needs)
MAX_REQUESTS_PER_HOUR=1000
MAX_REQUESTS_PER_DAY=10000

# Proxy Configuration (Optional - if you need to use proxies)
USE_PROXY=false
# PROXY_LIST=proxy1:port,proxy2:port

# Web Interface Configuration
FLASK_SECRET_KEY=your_secret_key_here_change_this
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
